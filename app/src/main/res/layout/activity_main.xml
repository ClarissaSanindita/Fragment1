<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:ignore="ExtraText">
    tools:context="id.sch.smktelkom_mlg.www.fragment1clarissa.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Membuat Kotak Dialog"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"/>

    <Button
        android:layout_width="300dp"
        android:id="@+id/toastBtn"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="90dp"
        android:text="@string/toastTextBtn"
        android:layout_gravity="center"
        android:background="#02fafe"/>

    <Button android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/listDialogBtn"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginTop="145dp"
        android:text="@string/listDialogTextBtn"
        android:textColor="@color/white"
        android:background="#0f03fe"/>

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginTop="200dp"
        android:background="#fe0101"
        android:text="@string/exitTextBtn"
        android:textColor="#000" />
</RelativeLayout>